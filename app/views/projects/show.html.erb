<% content_for :title, @project.title %>
<script>
  context["project_id"] = <%= @project.id %>;
</script>

<div class="project">
  <span class="title"><%= @project.title %></span>
  <span class="description"><%= @project.description %></span>
  <br/><br/>

  <div class="todo-lists" data-component="todo-list">
    <h3 class="inline">Todo-Lists</h3>&nbsp;&nbsp;
    <%= button_tag "New Todo List", data: { action: "new-todo-list" }, class: "small inline" %>

    <div class="new-todo hide" data-container="new-todo-list">
      <br/>
      <input type="text" name="title" class="slim" placeholder="Title" data-attribute="title"/>
      <input type="text" name="description" class="slim" placeholder="Description" data-attribute="description"/>
      <%= button_tag "Create Todo", data: { action: "create-todo" }, class: "small" %>
      <%= button_tag "Cancel", data: { action: "cancel" }, class: "red small" %>
    </div>

    <br/><br/>

    <div data-container="todo-lists">
      <%= render "todo_lists/list", project: @project %>
    </div>
  </div>
</div>